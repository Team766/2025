{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
        {
            "label": "Deploy Sim",
            "type": "shell",
            "command": "./deploy_sim.sh",
            "problemMatcher": [],
            "showOutput": "always",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Gradle Build",
            "type": "shell",
            "command": "./gradlew build",
            "problemMatcher": [],
            "showOutput": "always",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Spotless Apply",
            "type": "shell",
            "command": "./gradlew spotlessApply",
            "problemMatcher": [],
            "showOutput": "always",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Spotless Apply and Build",
            "type": "shell",
            "command": "./gradlew spotlessApply build",
            "problemMatcher": [],
            "showOutput": "always",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Create New Robot",
            "type": "shell",
            "command": "./gradlew createNewRobot -ProbotName=${input:robot_name}",
            "problemMatcher": [],
            "showOutput": "always",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "showReuseMessage": false,
                "clear": true
            },
        }
    ],
    "inputs": [
        {
            "id": "robot_name",
            "description": "New Robot Name",
            "default": "",
            "type": "promptString"
        }
    ]
}